    @*modal change password*@
    <div class="modal fade" role="dialog" id="modalChangePassword" data-backdrop="static" data-keyboard="false" data-focus-on="input:first" style="padding-top: 15%;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="justify-content: flex-start;">
                    <h5 class="modal-title" id="exampleModalLabel">Change Password [@Session["expdatecal"] day expired]</h5>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="username"><i class="fa fa-user"></i> Username</label>
                            <input type="text" class="form-control" name="username" id="username" value="@Session["UserID"]" placeholder="" disabled>
                        </div>
                        <div class="form-group">
                            <label for="oldPasswordLabel" id="oldPasswordLabel"><i class="fa fa-key"></i> Old password</label>
                            <div class="input-group mb-3">
                                <input type="password" class="form-control form-control-warning" name="oldPassword" id="oldPassword" placeholder="" onkeyup="checkEmptyField(this);" onkeypress="">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="button-addon2" onclick="showOldPassword();" style="height: 34px; margin-left: -3px;"><i class="fa fa-eye"> </i></button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="newPasswordLabel" id="newPasswordLabel"><i class="fa fa-key"></i> New password</label>
                            <div class="input-group mb-3">
                                <input type="password" class="form-control" name="newPassword" id="newPassword" placeholder="" onkeyup="checkEmptyField(this);" onkeypress="">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="button-addon2" onclick="showNewPassword();" style="height: 34px; margin-left: -3px;"><i class="fa fa-eye"> </i></button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="newConfirmPasswordLabel" id="newConfirmPasswordLabel"><i class="fa fa-key"></i> Confirm password</label>
                            <div class="input-group mb-3">
                                <input type="password" class="form-control" name="newConfirmPassword" id="newConfirmPassword" placeholder="" onkeyup="checkEmptyField(this);" onkeypress="">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="button" id="button-addon2" onclick="showNewConfirmPassword();" style="height: 34px; margin-left: -3px;"><i class="fa fa-eye"> </i></button>
                                </div>
                            </div>
                        </div>
                    </form>
                    @*warning*@
                    <div class="row" id="warningSave" style="display: none;">
                        <div class="col-sm-12 text-left" style="margin-top: 0px;">
                            <div class="alert alert-danger alert-dismissible" role="alert">
                                @*<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>*@
                                <strong>Warning</strong>
                                <hr>
                                <span id="textWarningSave"></span>
                            </div>
                        </div>
                    </div>
                    @*success*@
                    <div class="row" id="successSave" style="display: none;">
                        <div class="col-sm-12 text-left" style="margin-top: 0px;">
                            <div class="alert alert-success alert-dismissible" role="alert">
