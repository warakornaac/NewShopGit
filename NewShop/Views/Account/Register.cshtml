<body>
    <header class="header fixheader">
        <nav class="navbar navbar-expand-sm navbar-light ">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand p-0" href="#"><img src="~/images/logo/AACTAC185x70.jpg" style="height:50px;" /></a>
            <div class="collapse navbar-collapse flex-row-reverse" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown messages-menu">
                        <a class="nav-link dropdown-toggle " href="~/Account/LogIn">
                            <i class="fa fa fa-outdent"></i>
                            <span>ออกจากระบบ</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>


    <div class="container pt-3">
        <div class="container">
            <h3>เพิ่มบัญชีลูกค้าใช้งานระบบไลน์</h3>
            <div class="container border">
                <label>
                    กรุณากรอกข้อมูล <span class="red-star">*</span> ให้ครบถ้วน
                </label>
                <form method="post" id="register_tab" action="" onsubmit="return regisUser();">
                    <div class="row">

                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-3">
                                    E-mail<span class="red-star">*</span>
                                </label>
                                <div class="col-md-9">
                                    <input type="email" class="form-control" id="r_email" name="r_email" required />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-3">
                                    Cuscode<span class="red-star">*</span>
                                </label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" id="r_cuscod" name="r_cuscod" required />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-3">
                                    Telephone
                                </label>
                                <div class="col-md-9">
                                    <input type="tel" class="form-control" id="r_phone" name="r_phone" maxlength="10" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-3">
                                    LineID**
                                </label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" id="r_line" name="r_line" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="co-6">
                            <div class="form-group row">
                                <div class="col-6">

                                </div>
                                <div class="col-6 d-flex justify-content-end">
                                    <div class="col-md-2">
                                        <input type="submit" class="btn btn-success form-btn" value="SignUp" />
                                    </div>
                                    <div class="col-md-2">
                                        <input type="reset" class="btn btn-danger form-btn" value="Clear" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function regisUser() {
            var email = $('#r_email').val();
            var tel = $('#r_phone').val();
            var line = $('#r_line').val();
            var cuscod = $('#r_cuscod').val();
            if (cuscod.trim() == "") {
                alert("Enter Customer Code please!!!");
                return false;
            }
            else {
               // alert("Register Success !!!");
                $.ajax({
                    type: 'POST',
                    cache: false,
                    url: '@Url.Action("AddUser", "Account")',
                    data: JSON.stringify({
                        email: email,
                        tel: tel,
                        line: line,
                        cuscos: cuscod,
                        user: '@Session["UserID"]'
                    }),
                    dataType: 'json',
                    traditional: true,
                    contentType: "application/json; charset=utf-8",
                    processData: false,
                    beforeSend: function () {
                        // LoadingShow();
                    },
                    success: function (result) {
                        if (result.status == "success") {
                            alert("Customer registered!!!");
                            //window.location.assign("@domainName" + "/CheckStatus/index");
                        }
                    },
                    error: function (ex) {
                        //notify(ex, 'danger');
                    },
                    complete: function (res) {
                    }
                }).fail(function (error) {
                    Swal.close();
                    Swal.fire({
                        icon: 'error',
                        title: 'ระบบทำงานผิดพลาด()',
                        html: 'กรุณาแจ้งผู้ดูแลระบบ<br>โดยการแคปหน้าจอและก๊อปปี้ Error ด่านล่างนี้<br>saveForecastSale' + error + '<br><br>',
                        confirmButtonColor: '#d33',
                        confirmButtonText: 'ปิด',
                        allowOutsideClick: false,
                        focusConfirm: false,
                    });
                });
            }

        }
    </script>
</body>

</html>