     <script type="text/javascript">
         //$("#myModalWarninglog").modal();
        // alert("แจ้งปิดปรับปรุงระบบ ชั่วคราว!เรียน ผู้ใช้งานทุกท่าน ทางไอทีขอแจ้งให้ทราบ ระบบจะปิดปรับปรุง ในวันเสาร์ที่ 04 กุมภาพันธ์ 2566 เวลา 18:00 – วันอาทิตย์ เวลา 08:00 น. ขออภัยในความไม่สะดวก")
        $(".toggle-password").click(function () {

            $(this).toggleClass("fa-eye fa-eye-slash");
            var input = $($(this).attr("toggle"));
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    </script>
    

   
