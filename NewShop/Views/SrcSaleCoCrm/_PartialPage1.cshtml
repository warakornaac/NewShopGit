@{
    var grid = new WebGrid(Model, canPage: true, rowsPerPage: 10, defaultSort: "Status", selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
    grid.Pager(WebGridPagerModes.NextPrevious);


}


<div id="gridContent">

    @grid.GetHtml(tableStyle: "webGrid",
                headerStyle: "header",
                alternatingRowStyle: "alt",
                selectedRowStyle: "select",
                columns: grid.Columns(
                grid.Column("Id", format: (item) => item.GetSelectLink(item.Id)),
                grid.Column("No", "Del", format: @<div id="cancelx" class="fas fa-trash fa-1x" docno="@item.No" style="cursor: pointer;color:red;"></div>),
               // grid.Column("No", " No"),
                grid.Column("No",  format: @<div id="Scmid" docnoe="@item.No" cus="@item.SelltoCustomer" slm="@item.SaleMan" style="cursor: pointer;color: darkorchid;text-decoration: underline;">@item.No</div>),
                grid.Column("Document_Order",  format: @<div id="myHref" docnoe="@item.No" orderno="@item.Document_Order" cus="@item.SelltoCustomer" slm="@item.SaleMan" style="cursor: pointer;color: darkorchid;text-decoration: underline;">@item.Document_Order</div>),
            //grid.Column("Document_Order", "DocumentNo"),
             grid.Column("PhoneStatus", "PhoneStatus", style: "description"),
            // grid.Column("SaleCustomer", "SaleCustomer"),
             grid.Column("Step1", "Step1"),
             grid.Column("Step2", "Step2"),
             grid.Column("Step3", "Step3"),
             grid.Column("Step4", "Step4"),
             grid.Column("Step5", "Step5"),
             grid.Column("Status", "Status"),
             grid.Column("UserCreate", "UserCreate"),
             grid.Column("SelltoCustomer", "SelltoCustomer"),
                   grid.Column("SaleMan", "SaleMan"),
            // grid.Column("Oderdat", "Oderdat"),
                   grid.Column("InsertedBy", "InsertedBy"),
                   grid.Column("InsertedDate", "InsertedDate")

                   ))
    @if (grid.HasSelection)
    {
        NewShop.Models.Product product = (NewShop.Models.Product)grid.Rows[grid.SelectedIndex].Value;
       

    }

</div>
