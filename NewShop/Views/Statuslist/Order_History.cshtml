@model List<NewShop.Models.SaleOrder_History>
@{
    var grid = new WebGrid(Model, canPage: true, rowsPerPage: 50, defaultSort: "Status", selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
    grid.Pager(WebGridPagerModes.NextPrevious);


}
<style>
    .CUSCOD {
        background-color: rgba(114, 241, 35, 0.29);
    }

    .STKCOD {
        background-color: blanchedalmond;
    }

    .QTY {
        background-color: aquamarine;
    }

    .UnitPrice {
        background-color: rgba(114, 241, 35, 0.29);
    }

    .AMT {
        background-color: aquamarine;
    }

    .Discount {
        background-color: rgba(114, 241, 35, 0.29);
    }

    .FullDes {
        text-align: left;
    }

    .ORDDAT {
        background-color: blanchedalmond;
    }
</style>

<div id="gridContent">

    @grid.GetHtml(tableStyle: "exampletbByItem",
                headerStyle: "header",
                alternatingRowStyle: "alt",
                selectedRowStyle: "select",
                columns: grid.Columns(
                                       grid.Column("Customer", format: (item) => item.CUSCOD + "/" + item.CUSNAM, style: "CUSCOD"),
                               grid.Column("SLMCOD", format: (item) => item.SLMCOD, style: "QTY"),
                               grid.Column("STKCOD", format: (item) => item.STKCOD, style: "STKCOD"),
                               grid.Column("FullDes", format: (item) => item.FullDes, style: "FullDes"),
                               grid.Column("QTY", format: (item) => item.QTY, style: "QTY"),
                               grid.Column("Unit Price", format: (item) => item.SALPRICE, style: "UnitPrice"),
                               grid.Column("Sales Amount", format: (item) => item.AMT, style: "AMT"),
                               grid.Column("Discount", format: (item) => item.DISCOUNT, style: "Discount"),
                               grid.Column("SONUM", "Sales No."),
                               grid.Column("PINUM", "PI No."),
                               grid.Column("INVNUM", "SI No."),
                               grid.Column("Order Date", format: (item) => item.ORDDAT, style: "ORDDAT")
                              ))
    @if (grid.HasSelection)
    {
        NewShop.Models.SaleOrder_History SaleOrder_History = (NewShop.Models.SaleOrder_History)grid.Rows[grid.SelectedIndex].Value;

    }

</div>


